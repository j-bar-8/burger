<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>Burgers</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<h2>Someone Ate These</h2>
			<ul>
				{{#each burgers}}
					{{#unless devoured}}
						{{>burgers/burger-block devoured=true}}
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-lg-4">

		</div>
		<div class="col-lg-4">
			<h2>Ready to Eat!</h2>
			<ul>
				{{#each burgers}}
					{{#if devoured}}
						{{>burgers/burger-block devoured=false}}
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>	
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">Order a Burger</h4>
				</div>
				<div class="panel-body">
					<form role="form">
						<div class="form-group">
							<label for="reserve-name">What kind would you like?</label>
							<input type="text" class="form-control" id="burger-input">
						</div>
						<button type="submit" class="btn btn-primary submit">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>