<div class="container">	
	<div class="row">
		<div class="col-lg-12 text-center">
			<h1>Burgers</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<h2>You can eat these</h2>

			<ul>
			{{#each burgers}}
				{{#unless devoured}}
				{{> burgers/burger-block devour=true}}
				{{/unless}}
			{{/each}}
			</ul>
		</div>
		<div class="col-lg-4">
			<img src="/assets/img/220px-Bob's_Burgers_promo.png" alt="Bob's Burgers">
		</div>
		<div class="col-lg-4">
			<h2>These were eaten</h2>

			<ul>
			{{#each burgers}}
				{{#if devoured}}
				{{> burgers/burger-block devour=false}}
				{{/if}}
			{{/each}}
			</ul>
		</div>	
	</div>	
	<div class="row">
		<div class="col-lg-6">
			<h2>Add a burger</h2>
			<form class="create-form">

			<div class="form-group">
				<label for="burger-input">Burger Name:</label>
				<input type="text" id="burger-input" name="name">
			</div>

			<div class="form-group">
				<label for="devoured">Ready to eat?</label><br>
				<input type="radio" name="devoured" value="0" checked> Yes<br>
				<input type="radio" name="devoured" value="1"> No
			</div>

			<button type="submit">Add burger</button>
			</form>
		</div>	
	</div>
</div>	